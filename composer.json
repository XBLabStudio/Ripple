    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.0"
    },
    "authors": [
        {
            "name": "XtraBytes",
            "email": "hello@xtrabytes.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "XB\\": "src/XB/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
	},
    "require-dev": {
